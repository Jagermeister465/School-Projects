@model NextStep.Models.StudentViewModel

@{
    ViewData["Title"] = "Student List";
}

<h1>Student Index</h1>

<p>
    <a asp-action="Index">List View</a> | 
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Students" asp-action="IndexCardView" method="get">
    <p>
        Major: <select asp-for="StudentMajor" asp-items=@Model.Majors>
            <option value="">All</option>
        </select>

        First Name: <input type="text" asp-for="SearchFirst" />
        Minimum GPA: <input type="number" asp-for="MinimumGPA" min="0.0" max="4.00" step="0.01" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="row">
    @foreach (var item in Model.Students)
    {
        <div class="row" >
            <div class="card" style="width:15em;margin:10px;">
                <div class="card-body">
                    <div class="card-title">
                        <h3>@item.FirstName @item.LastName</h3>
                    </div>
                    <div class="card-text">
                        <p>
                            @item.Major<br />GPA: @item.GPA<br />@item.GraduationDateFormatted<br />
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
